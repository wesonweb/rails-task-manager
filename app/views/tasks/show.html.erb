<div class="row mt-5 justify-content-center">
  <div class="col col-md-4">
    <h1><%= @task.title %></h1>
      <p class="lead"><%= @task.details %></p>
      <% if @task.completed == true %>
        <p>
          <input type="checkbox">
        This task is complete</p>
      <% else %>
        <p>
          <input type="checkbox">
          This task is incomplete
        </p>
      <% end %>
      <%= link_to 'edit task', edit_task_path(@task), class: 'btn btn-secondary mt-2' %>
      <%= link_to "Delete #{@task.title}",
      task_path(@task), class: 'btn btn-danger mt-2',
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
      <div class="mt-3">
      <i class="fa-sharp fa-solid fa-rotate-left"></i>
        <%= link_to 'list all tasks', tasks_path, class: '' %>
      </div>
  </div>
</div>
