<h1><%= @task.title %></h1>
  <p><%= @task.details %></p>
  <% if @task.completed == true %>
    <p>
      <input type="checkbox">
    This task is complete</p>
  <% else %>
    <p>
      <input type="checkbox">
      This task is incomplete
    </p>
  <% end %>

  <%= link_to 'back home', tasks_path %>

  <%= link_to 'edit task', edit_task_path(@task) %>

  <%= link_to "Delete #{@task.title}",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
