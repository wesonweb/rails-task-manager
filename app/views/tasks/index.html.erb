<div class="row mt-5 justify-content-center">
  <div class="col col-md-4">
  <h1>My tasks</h1>
    <ul class="list-group">
      <% @tasks.each do |task| %>
        <li class="list-group-item"><input type="checkbox" class="my-2">
          <%= link_to task.title, task_path(task), class: "fs-5 py-3 ms-2 text-decoration-none" %>
          <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
          <i class="fa-sharp fa-solid fa-trash text-dark fs-6 ms-2"></i>
          <% end %>
        </li>
      <% end %>
    </ul>
    <%= link_to 'add a new task', new_task_path, class: 'btn btn-primary mt-2' %>
  </div>
</div>
